<div class="col-12 col-xl-8 order-xl-1">
    <div class="row row--grid">
        @foreach (var log in Model.AuctionFinishLogs)
        {
            <div class="col-12 col-lg-6 col-xl-12">
                <div class="activity">
                    <a href="item.html" class="activity__cover">
                        <img src="img/cover/cover1.jpg" alt="">
                    </a>
                    <div class="activity__content">
                        <h3 class="activity__title">
                            <a href="item.html">@log.Token.Name</a>
                        </h3>
                        <p class="activity__text">@log.Seller.UserName's user auction has ended. Winner - @log.Winner.UserName<a href="author.html">Nickname</a> <br>Price <b> @log.Price</b></p>
                        <span class="activity__time">@log.FinishTime.ToString("f")</span>
                    </div>
                </div>
            </div>
        }
        @foreach (var log in Model.AuctionParticipationLogs)
        {
            <div class="col-12 col-lg-6 col-xl-12">
                <div class="activity">
                    <a href="item.html" class="activity__cover">
                        <img src="img/cover/cover2.jpg" alt="">
                    </a>
                    
                        <div class="activity__content">
                            <h3 class="activity__title">
                                <a href="item.html">@log.Token.Name</a>
                            </h3>
                            @if (@log.HasWon)
                            {
                                <p class="activity__text">You took part in the auction</p>
                            }
                            else
                            {
                                <p class="activity__text">You won the auction and get a token</p>
                            }
                            <span class="activity__time">
                                Auction ended @log.Auction.Finish.ToString("f")</span>
                        </div>
                    }

                </div>
            </div>
        }
        @foreach (var log in Model.TokenCreationLogs)
        {
            <div class="col-12 col-lg-6 col-xl-12">
                <div class="activity">
                    <a href="item.html" class="activity__cover">
                        <img src="img/cover/cover4.jpg" alt="">
                    </a>
                    <div class="activity__content">
                        <h3 class="activity__title">
                            <a href="item.html">@log.Token.Name</a>
                        </h3>
                        <p class="activity__text">You created a token</p>
                        <span class="activity__time">@log.CreationTime.ToString("f")</span>
                    </div>
                </div>
            </div>
        }
    </div>

