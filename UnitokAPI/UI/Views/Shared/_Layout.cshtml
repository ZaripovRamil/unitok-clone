<script>
/*==============================
        Header search
        ==============================*/
  const headerSearchInput = document.getElementById("header__search__input");
  const headerSearchResultsContainer = document.getElementById("header__search__results");

  headerSearchInput.addEventListener("input", function () {
    const query = this.value.trim();

    if (query.length === 0) {
      headerSearchResultsContainer.innerHTML = "";
      return;
    }

    fetch(`/Search/TokensAndUsers?query=${encodeURIComponent(query)}`)
      .then(response => response.text())
      .then(html => {
        console.log(html);
        headerSearchResultsContainer.innerHTML = html;
      });
  });
</script>
@await RenderSectionAsync("Scripts", required: false)
